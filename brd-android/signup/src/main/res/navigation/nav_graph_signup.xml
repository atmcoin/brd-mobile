<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_signup"
    app:startDestination="@id/fragmentLogIn">

    <fragment
        android:id="@+id/fragmentLogIn"
        android:name="com.fabriik.signup.ui.login.LogInFragment"
        tools:layout="@layout/fragment_log_in">

        <action
            android:id="@+id/action_sign_up"
            app:destination="@+id/fragmentSignUp" />

        <action
            android:id="@+id/action_forgot_password"
            app:destination="@+id/fragmentForgotPassword" />

        <action
            android:id="@+id/action_kyc"
            app:destination="@+id/fragmentKycAddress" />

    </fragment>

    <fragment
        android:id="@+id/fragmentSignUp"
        android:name="com.fabriik.signup.ui.signup.info.SignUpInfoFragment"
        tools:layout="@layout/fragment_sign_up_info">

        <action
            android:id="@+id/action_confirm_email"
            app:destination="@+id/fragmentConfirmEmail" />

    </fragment>

    <fragment
        android:id="@+id/fragmentConfirmEmail"
        android:name="com.fabriik.signup.ui.signup.confirmemail.SignUpConfirmEmailFragment"
        tools:layout="@layout/fragment_sign_up_confirm_email">

        <argument
            android:name="sessionKey"
            app:argType="string" />

        <action
            android:id="@+id/action_log_in"
            app:destination="@+id/fragmentLogIn"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph_signup"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragmentForgotPassword"
        android:name="com.fabriik.signup.ui.forgotpassword.enteremail.ForgotPasswordFragment"
        tools:layout="@layout/fragment_forgot_password">

        <action
            android:id="@+id/action_reset_password"
            app:destination="@+id/fragmentResetPassword" />

    </fragment>

    <fragment
        android:id="@+id/fragmentResetPassword"
        android:name="com.fabriik.signup.ui.forgotpassword.reset.ResetPasswordFragment"
        tools:layout="@layout/fragment_reset_password">

        <action
            android:id="@+id/action_reset_completed"
            app:destination="@+id/fragmentResetCompleted" />

    </fragment>

    <fragment
        android:id="@+id/fragmentResetCompleted"
        android:name="com.fabriik.signup.ui.forgotpassword.resetcompleted.ResetPasswordCompletedFragment"
        tools:layout="@layout/fragment_reset_password_completed">

        <action
            android:id="@+id/action_log_in"
            app:destination="@+id/fragmentLogIn"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph_signup"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/fragmentKycAddress"
        android:name="com.fabriik.signup.ui.kyc.address.KycAddressFragment"
        tools:layout="@layout/fragment_kyc_address">

        <action
            android:id="@+id/action_kyc_personal_info"
            app:destination="@+id/fragmentKycPersonalInfo" />

    </fragment>

    <fragment
        android:id="@+id/fragmentKycPersonalInfo"
        android:name="com.fabriik.signup.ui.kyc.personalinfo.KycPersonalInfoFragment"
        tools:layout="@layout/fragment_kyc_personal_info">

        <argument
            android:name="street"
            app:argType="string" />

        <argument
            android:name="state"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="city"
            app:argType="string" />

        <argument
            android:name="zip"
            app:argType="string" />

        <argument
            android:name="country"
            app:argType="string" />

        <action
            android:id="@+id/action_id_upload"
            app:destination="@+id/fragmentKycCompleted" /> <!-- todo: Change to photo upload screens -->

    </fragment>

    <fragment
        android:id="@+id/fragmentKycCompleted"
        android:name="com.fabriik.signup.ui.kyc.completed.KycCompletedFragment"
        tools:layout="@layout/fragment_kyc_complete">

        <action
            android:id="@+id/action_log_in"
            app:destination="@+id/fragmentLogIn"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph_signup"
            app:popUpToInclusive="true" />

    </fragment>
</navigation>