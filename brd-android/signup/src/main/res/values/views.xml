<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.Button" parent="">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="fontFamily">@font/fabriik_font_medium</item>
    </style>

    <style name="Fragment.RootView" parent="">
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingBottom">42dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Fragment.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="materialThemeOverlay">@style/YellowButtonThemeOverlay</item>
        <item name="textAppearanceButton">@style/Fragment.Button.TextAppearance</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="Fragment.Button.TextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/fabriik_font_bold</item>
    </style>

    <style name="YellowButtonThemeOverlay">
        <item name="colorPrimary">@color/fabriik_yellow</item>
    </style>

    <style name="Fragment.Title" parent="">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fabriik_black</item>
        <item name="fontFamily">@font/fabriik_font_bold</item>
    </style>

    <style name="Fragment.TextButton" parent="">
        <item name="android:textColor">@color/fabriik_gray_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHighlight">#00FFFFFF</item>
        <item name="fontFamily">@font/fabriik_font_regular</item>
    </style>

    <style name="Fragment.Button.Circle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="shapeAppearanceOverlay">@style/Fragment.Button.Circle.ShapeOverlay</item>
    </style>

    <style name="Fragment.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Fragment.Button.Circle.ShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Fragment.Footer" parent="">
        <item name="android:src">@drawable/ic_fabriik_footer</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Input.Hint" parent="">
        <item name="android:textColor">@color/fabriik_gray_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/fabriik_font_medium</item>
    </style>

    <style name="Input.EditText" parent="">
        <item name="android:background">@drawable/fabriik_edittext_border</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/fabriik_black</item>
        <item name="android:textColorHint">@color/fabriik_gray_1</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/fabriik_font_medium</item>
    </style>

    <style name="Input.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/fabriik_checkbox_tint</item>
    </style>

    <style name="Input.Checkbox.Text" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fabriik_gray_1</item>
        <item name="android:textColorHighlight">#00FFFFFF</item>
        <item name="fontFamily">@font/fabriik_font_regular</item>
    </style>

    <style name="ConfirmEmail.Description" parent="">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fabriik_gray_1</item>
        <item name="fontFamily">@font/fabriik_font_regular</item>
    </style>

    <style name="ProgressIndicator" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/indicator_password_recovery</item>
    </style>

    <style name="ProgressIndicator.ForgotPassword">
        <item name="android:max">2</item>
    </style>

    <style name="ProgressIndicator.Kyc">
        <item name="android:max">6</item>
    </style>

    <style name="UploadId.Button.Next" parent="Fragment.Button.Outlined">
        <item name="android:textColor">@color/fabriik_photo_green_button_tint</item>
        <item name="icon">@drawable/ic_photo_next</item>
        <item name="iconTint">@color/fabriik_photo_green_button_tint</item>
        <item name="strokeColor">@color/fabriik_photo_green_button_tint</item>
    </style>

    <style name="UploadId.Button.Retry" parent="Fragment.Button.Outlined">
        <item name="android:textColor">@color/fabriik_photo_red_button_tint</item>
        <item name="icon">@drawable/ic_photo_retry</item>
        <item name="iconTint">@color/fabriik_photo_red_button_tint</item>
        <item name="strokeColor">@color/fabriik_photo_red_button_tint</item>
    </style>

    <style name="UploadId.Button.TakePhoto" parent="Fragment.Button.Circle">
        <item name="android:backgroundTint">@color/fabriik_signup_background</item>
        <item name="icon">@drawable/ic_take_photo</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="UploadId.Button.SwitchCamera" parent="Fragment.Button.Circle">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="icon">@drawable/ic_switch_camera</item>
        <item name="iconTint">#282828</item>
    </style>

    <style name="UploadId.PreviewCardView" parent="">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>