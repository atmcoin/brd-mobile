<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.Button" parent="">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="fontFamily">@font/mobile_font</item>
    </style>

    <style name="Fragment.Title" parent="">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fabriik_black</item>
        <item name="fontFamily">@font/mobile_font_bold</item>
    </style>

    <style name="Fragment.Footer" parent="">
        <item name="android:src">@drawable/ic_fabriik_footer</item>
        <item name="android:layout_marginBottom">42dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>