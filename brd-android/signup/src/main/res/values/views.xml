<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.Button" parent="">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="fontFamily">@font/mobile_font</item>
    </style>

    <style name="Fragment.RootView" parent="">
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingBottom">42dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Fragment.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="materialThemeOverlay">@style/YellowButtonThemeOverlay</item>
        <item name="textAppearanceButton">@style/textAppearanceButton</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="YellowButtonThemeOverlay">
        <item name="colorPrimary">@color/fabriik_yellow</item>
    </style>

    <style name="YellowButton.TextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/mobile_font</item>
    </style>

    <style name="Fragment.Title" parent="">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fabriik_black</item>
        <item name="fontFamily">@font/mobile_font_bold</item>
    </style>

    <style name="Fragment.Footer" parent="">
        <item name="android:src">@drawable/ic_fabriik_footer</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Input.Hint" parent="">
        <item name="android:textColor">@color/fabriik_gray_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/mobile_font_medium</item>
    </style>

    <style name="Input.EditText" parent="">
        <item name="android:background">@drawable/fabriik_edittext_border</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColorHint">@color/fabriik_gray_1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Input.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/fabriik_checkbox_tint</item>
    </style>

    <style name="ConfirmEmail.Description" parent="">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fabriik_gray_1</item>
        <item name="fontFamily">@font/mobile_font</item>
    </style>

</resources>