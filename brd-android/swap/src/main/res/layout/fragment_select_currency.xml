<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fabriik_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:background="?attr/toolbar_back_arrow_dark"
                android:visibility="gone" />

            <com.breadwallet.legacy.presenter.customviews.BaseTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/bread_margin"
                android:layout_marginTop="@dimen/bread_margin"
                android:layout_marginEnd="@dimen/bread_margin"
                android:fontFamily="@font/mobile_font_bold"
                android:text="@string/Swap.swapYour"
                android:textColor="@color/fabriik_black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:src="@drawable/ic_close_blue_24dp"
                app:tint="@color/fabriik_black" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.breadwallet.legacy.presenter.customviews.BREdit
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_border"
        android:drawableStart="@drawable/ic_search_gray_18dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/mobile_font_book"
        android:hint="@string/Search.search"
        android:inputType="textPersonName"
        android:maxEms="20"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:textColor="@color/fabriik_black"
        android:textColorHint="@color/fabriik_black"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_currencies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_edit"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="4"
        tools:listitem="@layout/list_item_selling_currency" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/loading_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="#0092FF"
        android:visibility="gone"/>

</RelativeLayout>