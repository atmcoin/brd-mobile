<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swap_nav_graph"
    app:startDestination="@id/selectSellingCurrency">

    <fragment
        android:id="@+id/selectSellingCurrency"
        android:name="com.fabriik.swap.ui.sellingcurrency.SelectSellingCurrencyFragment"
        tools:layout="@layout/fragment_select_currency">

        <action android:id="@+id/action_buying_currency"
            app:destination="@+id/selectBuyingCurrency"/>
    </fragment>

    <fragment
        android:id="@+id/selectBuyingCurrency"
        android:name="com.fabriik.swap.ui.buyingCurrency.SelectBuyingCurrencyFragment"
        tools:layout="@layout/fragment_select_currency" >

        <argument
            android:name="sellingCurrency"
            app:argType="com.fabriik.swap.data.responses.SwapCurrency"/>

        <action android:id="@+id/action_select_amount"
            app:destination="@+id/selectAmountFragment"/>

    </fragment>

    <fragment
        android:id="@+id/selectAmountFragment"
        android:name="com.fabriik.swap.ui.SelectAmountFragment"
        tools:layout="@layout/fragment_select_amount" >

        <argument
            android:name="sellingCurrency"
            app:argType="com.fabriik.swap.data.responses.SwapCurrency"/>

        <argument
            android:name="buyingCurrency"
            app:argType="com.fabriik.swap.data.responses.SwapCurrency"/>

        <action android:id="@+id/action_swap_preview"
            app:destination="@+id/swapPreviewFragment"/>
    </fragment>

    <fragment
        android:id="@+id/swapPreviewFragment"
        android:name="com.fabriik.swap.ui.SwapPreviewFragment"
        tools:layout="@layout/fragment_swap_preview" />
</navigation>